<Window x:Class="FinApp.View.EditIncome"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:FinApp.View"
        mc:Ignorable="d"
        Title="Изменение дохода" Height="300" Width="400">
    <Grid>
        <StackPanel VerticalAlignment="Center">

            <TextBlock Text="Редактирование дохода" FontSize="15" FontWeight="Bold" HorizontalAlignment="Center" Margin="0 20 0 20"></TextBlock>

            <TextBox x:Name="IncomeSum" materialDesign:HintAssist.Hint="Изменить сумму" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="20 0" />

            <ComboBox x:Name="IncomeCategories" materialDesign:HintAssist.Hint="Изменить категорию" Style="{StaticResource MaterialDesignFloatingHintComboBox}" Margin="20 0"></ComboBox>

            <DatePicker Margin="20" materialDesign:HintAssist.Hint="Изменить дату"/>

            <Button Content="Изменить" Margin="20"/>

        </StackPanel>
    </Grid>
</Window>
